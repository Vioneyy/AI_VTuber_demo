# ==================== AI VTuber Configuration (Example) ====================

# ==================== Discord Bot ====================
DISCORD_BOT_TOKEN=
DISCORD_VOICE_STT_ENABLED=true

# ==================== OpenAI / LLM ====================
OPENAI_API_KEY=
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=128

# ==================== YouTube Live (Optional) ====================
YOUTUBE_STREAM_ID=
YOUTUBE_API_KEY=

# ==================== VTube Studio ====================
VTS_PLUGIN_NAME=JeedAI_VTuber
VTS_MODEL_NAME=hiyori
VTS_PLUGIN_TOKEN=

# VTS Motion Settings
VTS_MOVEMENT_SMOOTHING=0.85
VTS_UPDATE_DT=0.016
VTS_MOTION_INTENSITY=1.0
VTS_SEND_MIN_INTERVAL_MS=16

# ==================== TTS Settings ====================
TTS_ENGINE=f5_tts_thai
TTS_REFERENCE_WAV=reference_audio/jeed_voice.wav

# ==================== RVC (Voice Conversion) ====================
ENABLE_RVC=true
VOICE_PRESET=anime_girl
RVC_MODEL_PATH=rvc_models/jeed_anime.pth

# ==================== STT (Whisper.cpp) ====================
# ดาวน์โหลด whisper.cpp และ build ด้วย CUDA/cuBLAS
# https://github.com/ggerganov/whisper.cpp

WHISPER_CPP_BIN_PATH=
WHISPER_CPP_MODEL_PATH=
WHISPER_CPP_LANG=th
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=10000

# ==================== Audio Device ====================
# ใช้ 'cuda' ถ้ามี NVIDIA GPU, 'cpu' ถ้าไม่มี
AUDIO_DEVICE=cuda

# ==================== System Settings ====================
RESPONSE_TIMEOUT=10