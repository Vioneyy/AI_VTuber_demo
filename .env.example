# ==========================================
# AI VTuber Configuration for Hiyori_A Model (Example)
# ==========================================

# === Discord Bot ===
# ใส่โทเคนจริงในไฟล์ .env เท่านั้น (ไฟล์นี้เป็นตัวอย่าง)
DISCORD_BOT_TOKEN=
DISCORD_PRIORITY=0

# === OpenAI / LLM ===
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini
RESPONSE_TIMEOUT=10

# === VTube Studio ===
VTS_PLUGIN_NAME=AI VTuber Demo
VTS_HOST=127.0.0.1
VTS_PORT=8001

# VTS Connection Settings
VTS_PING_INTERVAL=30
VTS_PING_TIMEOUT=20
VTS_RECONNECT_ATTEMPTS=10
VTS_RECONNECT_BACKOFF_MS=1000

# === Hiyori_A Motion Settings ===
VTS_MOTION_INTENSITY=0.6
VTS_BLINK_FREQUENCY=0.4
VTS_HEAD_MOVEMENT_RANGE=12
VTS_EYE_MOVEMENT_RANGE=0.6
VTS_BODY_SWAY_RANGE=3

# Motion Timing (วินาที)
VTS_MOTION_MIN_INTERVAL=2.0
VTS_MOTION_MAX_INTERVAL=5.0
VTS_BLINK_DURATION=0.15

# === Emotion Hotkeys ===
ENABLE_GLOBAL_HOTKEYS=false
VTS_HK_THINKING=thinking
VTS_HK_HAPPY=happy
VTS_HK_SAD=sad

# ==========================
# Human Motion Configuration
# ==========================

# VTube Studio WebSocket
VTS_HOST=127.0.0.1
VTS_PORT=8001

# Update rate
MOTION_UPDATE_HZ=60

# Smoothing/Damping (EMA alpha, 0..1)
MOTION_DAMPING_ALPHA=0.85

# Head/body angle ranges (degrees)
MOTION_RANGE_FACEANGLE_X=20.0
MOTION_RANGE_FACEANGLE_Y=15.0
MOTION_RANGE_FACEANGLE_Z=10.0

# Head position ranges (units)
MOTION_RANGE_FACEPOS_MIN=0.05
MOTION_RANGE_FACEPOS_MAX=0.10

# Random jitter magnitudes
MOTION_JITTER_DEG=0.4
MOTION_JITTER_POS=0.01

# Breathing parameters
BREATH_FREQ_HZ=0.15
BREATH_AMP=0.03

# Blink behavior
BLINK_MIN_SEC=0.5
BLINK_MAX_SEC=2.5
BLINK_DURATION=0.16

# Baseline smile (always on)
SMILE_BASE_MIN=0.80
SMILE_BASE_MAX=1.00

# Microphone reactive motion
ENABLE_MIC=true
VTS_EMOTION_TRIGGER_PROBABILITY=0.2
VTS_EMOTION_AUTO_ANALYZE=true

# Safe Motion Mode
SAFE_MOTION_MODE=false
SAFE_HOTKEY_INTERVAL=8.0

# === YouTube Live (Optional) ===
YOUTUBE_STREAM_ID=
YOUTUBE_PRIORITY=1

# === TTS Settings ===
TTS_ENGINE=f5_tts_thai
TTS_VOICE_ID=default
TTS_EMOTION_DEFAULT=neutral
TTS_REFERENCE_WAV=ref_audio.wav
TTS_REFERENCE_TEXT=สวัสดีค่ะ ยินดีที่ได้รู้จักนะคะ

# F5-TTS-THAI Settings
F5_TTS_MODEL=v1
F5_TTS_STEP=32
F5_TTS_CFG=2.0
F5_TTS_SPEED=0.3
F5_TTS_SR=24000
F5_TTS_REF_TEXT=
F5_TTS_TIMEOUT_MS=3000

# Hugging Face Token
HF_TOKEN=

# === RVC Voice Conversion ===
ENABLE_RVC=true
VOICE_PRESET=anime_girl
RVC_TIMEOUT_MS=2000

# === Whisper.cpp STT ===
DISCORD_VOICE_STT_ENABLED=true
WHISPER_CPP_BIN_PATH=
WHISPER_CPP_MODEL_PATH=
WHISPER_CPP_LANG=th
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000

# Optional: Hugging Face Hub Token
HUGGINGFACE_HUB_TOKEN=