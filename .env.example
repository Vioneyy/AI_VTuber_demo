#############################
# Jeed AI VTuber - .env.example (mirror .env, no secrets)
#############################

# ===== Discord =====
DISCORD_ENABLED=true
DISCORD_BOT_TOKEN=
ADMIN_USER_IDS=508192047614918656

# ===== OpenAI / LLM =====
OPENAI_API_KEY=
LLM_MODEL=gpt-4-turbo
LLM_MAX_TOKENS=110
LLM_TEMPERATURE=0.3
RESPONSE_TIMEOUT=8

# ===== TTS =====
TTS_ENGINE=f5_tts_thai
TTS_DEVICE=cuda
TTS_SPEED=1.2
TTS_STEPS=12
TTS_REFERENCE_WAV=d:\AI_VTuber_demo\reference_audio\Jeed_anime.wav
F5_TTS_REF_AUDIO=d:\AI_VTuber_demo\reference_audio\Jeed_anime.wav
F5_TTS_REF_TEXT=สวัสดีค่ะ ฉันชื่อจี๊ด
TTS_SAMPLE_RATE=48000
F5_TTS_USE_REFERENCE=true
F5_TTS_CFG_STRENGTH=2.0
F5_TTS_SAMPLE_RATE=24000
EDGE_TTS_VOICE=th-TH-AcharaNeural
EDGE_TTS_RATE=+10%
EDGE_TTS_PITCH=+150Hz

# ===== STT (Whisper) =====
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cpu
WHISPER_LANG=th
WHISPER_TIMEOUT_SECONDS=7
WHISPER_BEAM_SIZE=10
WHISPER_TEMPERATURE=0.0
WHISPER_COMPUTE_TYPE=float32

# Whisper.cpp (optional)
WHISPER_CPP_ENABLED=false
WHISPER_CPP_BIN_PATH=D:\AI_VTuber_demo\whisper.cpp\main.exe
WHISPER_CPP_MODEL_PATH=D:\AI_VTuber_demo\whisper.cpp\models\ggml-base.bin
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000
WHISPER_CPP_LANG=th

# Python Whisper fallback
PY_WHISPER_MODEL=base
FFMPEG_BINARY=tools/ffmpeg/ffmpeg-8.0-essentials_build/bin/ffmpeg.exe

# ===== Discord Voice Processing =====
DISCORD_VOICE_STT_ENABLED=false
DISCORD_VOICE_RMS_THRESHOLD=350
DISCORD_VOICE_SILENCE_THRESHOLD=0.8
DISCORD_VOICE_MIN_AUDIO_DURATION=0.45
DISCORD_VOICE_TEST_REPLY_TEXT=
DISCORD_VOICE_RECORD_ENABLED=true
DISCORD_VOICE_RECORD_DIR=temp/recordings/discord_in
DISCORD_PLAYBACK_RECORD_ENABLED=true
DISCORD_PLAYBACK_RECORD_DIR=temp/recordings/discord_out

# ===== VTube Studio - Basic =====
VTS_ENABLED=true
VTS_WS_URL=ws://localhost:8001
VTS_PLUGIN_NAME=Jeed AI VTuber
VTS_PLUGIN_DEVELOPER=AI VTuber Team
VTS_PLUGIN_TOKEN=
VTS_ENABLE_LIP_SYNC=true
VTS_MOUTH_OPEN_PARAM=MouthOpen
VTS_MOUTH_FORM_PARAM=MouthForm

# =============================================
# ✅ VTube Studio - Advanced Settings
# =============================================
VTS_SMOOTH_FACTOR=0.15
VTS_SMOOTHNESS_GUARD=true
VTS_SMOOTH_MAX_DELTA_ANGLE=0.06
VTS_SMOOTH_MAX_DELTA_POS=0.04
VTS_SMOOTH_MAX_DELTA_EYE=0.08
VTS_SMOOTH_MAX_DELTA_MOUTH=0.15
VTS_IDLE_UPDATE_RATE=0.05
VTS_SEND_MIN_INTERVAL_MS=40
VTS_IDLE_MOTION_ENABLED=true

# ✅ Lip Sync Settings
VTS_LIPSYNC_CHUNK_MS=15
VTS_LIPSYNC_ATTACK=0.85
VTS_LIPSYNC_RELEASE=0.70
VTS_LIPSYNC_GAIN=2.2
VTS_LIPSYNC_SILENCE_TH=0.02
VTS_LIPSYNC_SILENCE_CHUNKS=3
VTS_LIPSYNC_OPEN_TH=0.20
VTS_LIPSYNC_CLOSE_TH=0.10
VTS_LIPSYNC_MIN_OPEN_MS=50
VTS_LIPSYNC_MIN_CLOSE_MS=30
VTS_LIPSYNC_PAUSE_MIN=0.10
VTS_LIPSYNC_PAUSE_MAX=0.16

# ===== YouTube Live =====
YOUTUBE_ENABLED=true
YOUTUBE_VIDEO_ID=https://youtube.com/live/-8OaXqbiXMk?feature=share
YOUTUBE_STREAM_ID=-8OaXqbiXMk

# ===== Personality =====
AI_NAME=จี้ด
AI_PERSONALITY=cute,energetic,friendly
AI_LANGUAGE=th

# ===== Performance =====
MAX_CONTEXT_MESSAGES=3
QUEUE_MAX_SIZE=50
AUDIO_SAMPLE_RATE=22050
AUDIO_CHUNK_SIZE=1024

# ===== Safety =====
SAFETY_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=true