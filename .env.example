#############################
# Jeed AI VTuber - .env.example (mirror .env without secrets)
# ใช้เป็นแม่แบบ: เหมือนไฟล์ .env ปัจจุบัน แต่ล้าง token/api key
#############################

# ===== Discord =====
DISCORD_BOT_TOKEN=
ADMIN_USER_IDS=508192047614918656

# ===== OpenAI / LLM =====
OPENAI_API_KEY=
LLM_MODEL=gpt-4-turbo
LLM_MAX_TOKENS=100
LLM_TEMPERATURE=0.7
RESPONSE_TIMEOUT=10

# ===== TTS =====
TTS_ENGINE=f5_tts_thai
TTS_DEVICE=cuda
TTS_SPEED=1.0
TTS_STEPS=32
TTS_REFERENCE_WAV=reference_audio/jeed_voice.wav
F5_TTS_REF_AUDIO=reference_audio/jeed_voice.wav
F5_TTS_REF_TEXT=สวัสดีค่ะ
TTS_SAMPLE_RATE=48000
# ใช้ F5-TTS-Thai แทน Edge-TTS (ลบค่าเสียง Edge)

# ===== RVC (External Server / WebUI) =====
RVC_ENABLED=true
RVC_SERVER_URL=http://localhost:8001
RVC_MODEL_PTH=rvc_models/jeed_anime.pth
RVC_MODEL_INDEX=rvc_models/jeed_anime.index
RVC_F0=true
RVC_TRANSPOSE=0
# สำหรับ FastAPI server: ชื่อโมเดลใน logs/ และวิธี f0
RVC_MODEL_NAME=jeed_anime
RVC_F0_METHOD=crepe
# โฟลเดอร์ Retrieval-based-Voice-Conversion-WebUI เพื่อเปิดอัตโนมัติ
RVC_WEBUI_DIR=d:\Retrieval-based-Voice-Conversion-WebUI
# อาร์กิวเสริม เช่น --no-half หาก GPU ไม่รองรับ half
RVC_WEBUI_ARGS=--noautoopen

# ระบุ Python ที่ใช้รัน infer-web.py (ใช้ venv ของ RVC)
RVC_PYTHON=d:\Retrieval-based-Voice-Conversion-WebUI\.venv\Scripts\python.exe

# ===== STT (Whisper) =====
WHISPER_MODEL=base
WHISPER_DEVICE=cuda
WHISPER_LANG=th

# Whisper.cpp (optional)
WHISPER_CPP_ENABLED=false
WHISPER_CPP_BIN_PATH=D:\AI_VTuber_demo\whisper.cpp\main.exe
WHISPER_CPP_MODEL_PATH=D:\AI_VTuber_demo\whisper.cpp\models\ggml-base.bin
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000
WHISPER_CPP_LANG=th

# Python Whisper fallback
PY_WHISPER_MODEL=base
# Optional: explicit ffmpeg path for Python Whisper
FFMPEG_BINARY=tools/ffmpeg/ffmpeg-8.0-essentials_build/bin/ffmpeg.exe

# ===== Discord voice processing =====
DISCORD_VOICE_STT_ENABLED=true
DISCORD_VOICE_RMS_THRESHOLD=350
DISCORD_VOICE_SILENCE_THRESHOLD=0.8
DISCORD_VOICE_MIN_AUDIO_DURATION=0.45
DISCORD_VOICE_TEST_REPLY_TEXT=
DISCORD_VOICE_RECORD_ENABLED=true
DISCORD_VOICE_RECORD_DIR=temp/recordings/discord_in
DISCORD_PLAYBACK_RECORD_ENABLED=true
DISCORD_PLAYBACK_RECORD_DIR=temp/recordings/discord_out

# ===== VTube Studio =====
VTS_WS_URL=ws://localhost:8001
VTS_PLUGIN_NAME=Jeed AI VTuber
VTS_PLUGIN_DEVELOPER=AI VTuber Team
VTS_PLUGIN_TOKEN=
VTS_SEND_MIN_INTERVAL_MS=16

# ===== YouTube Live =====
YOUTUBE_ENABLED=false
YOUTUBE_VIDEO_ID=
YOUTUBE_STREAM_ID=

# ===== Personality =====
AI_NAME=จีด
AI_PERSONALITY=cute,energetic,friendly
AI_LANGUAGE=th

# ===== Performance =====
MAX_CONTEXT_MESSAGES=3
QUEUE_MAX_SIZE=50
AUDIO_SAMPLE_RATE=22050
AUDIO_CHUNK_SIZE=1024

# ===== Safety =====
SAFETY_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=true