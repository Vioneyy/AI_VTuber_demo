# ==========================================
# Jeed AI VTuber Configuration
# ==========================================
# คัดลอกไฟล์นี้เป็น .env และกรอกค่าต่างๆ

# ==========================================
# Discord Bot
# ==========================================
DISCORD_BOT_TOKEN=
DISCORD_VOICE_STT_ENABLED=true

# ==========================================
# OpenAI / LLM
# ==========================================
OPENAI_API_KEY=
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.85
LLM_MAX_TOKENS=80
RESPONSE_TIMEOUT=8

# ==========================================
# HuggingFace (สำหรับ F5-TTS)
# ==========================================
HF_TOKEN=
HUGGINGFACE_HUB_TOKEN=
# ^^ ใส่ HuggingFace token เพื่อเข้าถึงโมเดล F5-TTS

# ==========================================
# Whisper.cpp (STT)
# ==========================================
WHISPER_CPP_BIN_PATH=D:\whisper.cpp-master\build_cpu\bin\Release\main.exe
WHISPER_CPP_MODEL_PATH=D:\AI_VTuber_demo\models\ggml-large-v3.bin
WHISPER_CPP_LANG=th
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000

# ==========================================
# TTS (F5-TTS-Thai)
# ==========================================
TTS_ENGINE=f5_tts_thai
TTS_REFERENCE_WAV=reference_audio/jeed_voice.wav
F5_TTS_USE_REFERENCE=false
F5_TTS_REF_TEXT=
F5_TTS_SPEED=1.0
F5_TTS_STEPS=32
F5_TTS_CFG_STRENGTH=2.0
F5_TTS_SAMPLE_RATE=24000
F5_TTS_TIMEOUT_MS=3000

# ==========================================
# RVC (Voice Conversion)
# ==========================================
ENABLE_RVC=true
VOICE_PRESET=anime_girl
 RVC_MODEL_PATH=rvc_models/jeed_anime.pth
RVC_INDEX_PATH=rvc_models/jeed_anime.index
 RVC_PITCH=4
RVC_FILTER_RADIUS=3
RVC_RMS_MIX_RATE=0.8
RVC_PROTECT=0.33
RVC_TIMEOUT_MS=2000
RVC_GAIN_DB=0.0

# ==========================================
# VTube Studio
# ==========================================
VTS_PLUGIN_NAME=Jeed_AI_VTuber
VTS_PLUGIN_TOKEN=
# ^^ จะได้จากการรันครั้งแรก ให้นำมาใส่ตรงนี้
VTS_WEBSOCKET_URL=ws://localhost:8001
VTS_MODEL_NAME=Hiyori_A
VTS_IDLE_UPDATE_RATE=0.05
VTS_SMOOTH_FACTOR=0.15
VTS_MOVEMENT_INTENSITY_MIN=0.3
VTS_MOVEMENT_INTENSITY_MAX=0.8
VTS_HEAD_ROTATION_MIN=-15
VTS_HEAD_ROTATION_MAX=15
VTS_BODY_ROTATION_MIN=-8
VTS_BODY_ROTATION_MAX=8
VTS_EYE_MOVEMENT_SPEED_MIN=1.0
VTS_EYE_MOVEMENT_SPEED_MAX=3.0

# ==========================================
# Audio Settings
# ==========================================
AUDIO_DEVICE=cuda
AUDIO_SAMPLE_RATE=22050
AUDIO_CHANNELS=1

# ==========================================
# YouTube Live (ถ้าใช้)
# ==========================================
YOUTUBE_STREAM_ID=