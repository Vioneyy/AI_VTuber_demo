# ==========================================
# AI VTuber Configuration (.env.example)
# ==========================================

# === Discord Bot ===
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_VOICE_CHANNEL_ID=
DISCORD_ENABLE_MEMBERS=0
DISCORD_ENABLE_MESSAGE_CONTENT=0

# === Persona ===
PERSONA_NAME=miko

# === OpenAI / LLM ===
OPENAI_API_KEY=
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=150
RESPONSE_TIMEOUT=10

# === VTube Studio (Connection) ===
VTS_PLUGIN_NAME=AI_VTuber_Motion
VTS_PLUGIN_DEVELOPER=YourName
VTS_HOST=127.0.0.1
VTS_PORT=8001
VTS_SEND_MIN_INTERVAL_MS=50
VTS_UPDATE_RATE=30
VTS_HEARTBEAT_SEC=1.0
VTS_HEARTBEAT_DELTA=0.03
VTS_PARAM_STALE_SEC=0.6

# === Motion Settings (Orchestrator/MotionController) ===
VTS_MOVEMENT_SMOOTHING=0.85
VTS_MOTION_INTENSITY=0.6
VTS_UPDATE_DT=0.033
VTS_BREATH_SPEED=0.5
VTS_BREATH_INTENSITY=0.2
VTS_ACTION_DURATION_SCALE=1.0
VTS_MIN_ACTION_DURATION=0.8
VTS_MAX_ACTION_DURATION=2.0
VTS_BLINK_INTERVAL_MIN=2.0
VTS_BLINK_INTERVAL_MAX=6.0
VTS_BLINK_DURATION=0.15
VTS_ENABLE_INPUT_LOOP=0
VTS_ENABLE_IDLE_MOUTH_OPEN=0
VTS_IDLE_HEAD_INTENSITY=0.15
VTS_IDLE_BREATH_INTENSITY=0.25

# === Human-like Motion Tuning (Config) ===
VTS_NEURO_STYLE=0
VTS_USE_TIMELINE_STYLE=1
VTS_IDLE_YAW_FREQ_HZ=0.055
VTS_IDLE_PITCH_FREQ_HZ=0.045
VTS_IDLE_ROLL_FREQ_HZ=0.065
VTS_LOOK_AWAY_MIN_INTERVAL=13.0
VTS_LOOK_AWAY_MAX_INTERVAL=17.0
VTS_BLINK_CLUSTER_PROB=0.35
VTS_SMILE_PULSE_PROB=0.60
VTS_NOD_ON_TALK=1
VTS_SMOOTHING_ALPHA=0.12
VTS_DISABLE_NOISE=1
VTS_NOISE_HEAD_SCALE=0.00
VTS_NOISE_HEAD_Z_SCALE=0.00
VTS_NOISE_BODY_X_SCALE=0.00
VTS_NOISE_BODY_Z_SCALE=0.00
VTS_IDLE_JITTER_X=0.00
VTS_IDLE_JITTER_Y=0.00
VTS_MICROSACCADE_PROB=0.005
VTS_DISABLE_ALL_MOTION=0
VTS_ENABLE_RANDOM_MOTION=1
VTS_DUMP_CSV=0
VTS_DUMP_CSV_PATH=logs/vts_motion_dump.csv
VTS_SCRIPTED_PRESET=0
VTS_RANDOM_EVENTS_PRESET=0
VTS_RANDOM_EVENTS_CONTINUOUS=0
VTS_PRESET_DURATION_SEC=0.0
VTS_STYLE_PROFILE_NAME=neuro_like
VTS_STYLE_PROFILE_FILE=src/adapters/vts/styles/neuro_like.json
VTS_STYLE_REF_VIDEOS=
VTS_HOTKEY_ON_CONNECT=happy
VTS_ENABLE_AUTOHOTKEY=0

# === Hotkeys ===
ENABLE_GLOBAL_HOTKEYS=false
VTS_HK_NEUTRAL=thinking
VTS_HK_THINKING=thinking
VTS_HK_HAPPY=happy
VTS_HK_SAD=sad

# === Emotion Trigger ===
VTS_EMOTION_TRIGGER_PROBABILITY=0.6
VTS_EMOTION_AUTO_ANALYZE=true

# === Safe Motion Mode ===
SAFE_MOTION_MODE=false
SAFE_HOTKEY_INTERVAL=8.0

# === YouTube Live ===
YOUTUBE_STREAM_ID=your_youtube_stream_id
YOUTUBE_MOCK_MODE=false

# === TTS (F5-TTS-Thai / Google TTS) ===
TTS_ENGINE=f5_tts_thai
TTS_VOICE_ID=default
TTS_VOICE=default
TTS_REFERENCE_WAV=path/to/reference.wav
TTS_REFERENCE_TEXT=สวัสดีค่ะ ฉันเป็น AI VTuber
F5_TTS_USE_REFERENCE=false
F5_TTS_REF_TEXT=
F5_TTS_SPEED=1.0
F5_TTS_STEPS=32
F5_TTS_CFG_STRENGTH=2.0
F5_TTS_SAMPLE_RATE=24000

# === RVC (Voice Conversion) ===
ENABLE_RVC=false
VOICE_PRESET=anime_girl

# === Whisper.cpp STT (Discord voice) ===
DISCORD_VOICE_STT_ENABLED=false
WHISPER_CPP_BIN_PATH=path/to/whisper.cpp/main.exe
WHISPER_CPP_MODEL_PATH=path/to/ggml-model.bin
WHISPER_CPP_LANG=th
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000

# === Admin System ===
# Discord User IDs (comma-separated)
OWNER_IDS=123456789012345678
MODERATOR_IDS=234567890123456789,345678901234567890

# Secret code for unlocking project info
UNLOCK_CODE=unlock_secret_123

# === Safety Filter ===
ENABLE_SAFETY_FILTER=true
